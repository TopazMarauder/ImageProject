<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/galaxyimage"
    android:orientation="vertical"
    android:padding="16dp">


    <TextView
        android:id="@+id/text_register"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:text="Register"
        android:textAlignment="center"
        android:textColor="#FFFFFFFF"
        android:textSize="64dp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/enter_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text_register"
        android:layout_marginTop="200dp"
        android:backgroundTint="@color/white"
        android:hint="Enter Email"
        android:textColorHint="@color/teal_200"
        android:textScaleX="1.2"
        android:textStyle="bold|italic"
        android:textColor="@color/teal_200"/>

    <EditText
        android:id="@+id/enter_username"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/enter_email"
        android:layout_marginTop="20dp"
        android:backgroundTint="@color/white"
        android:hint="Enter Username"
        android:textColorHint="@color/teal_200"
        android:textScaleX="1.2"
        android:textStyle="bold|italic"
        android:textColor="@color/teal_200"/>
    <EditText
        android:id="@+id/enter_passwordprimary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/enter_username"
        android:layout_marginTop="20dp"
        android:backgroundTint="@color/white"
        android:hint="Password"
        android:inputType="numberPassword"
        android:textColorHint="@color/teal_200"
        android:textScaleX="1.2"
        android:textStyle="bold|italic"
        android:textColor="@color/teal_200"
        />

    <EditText
        android:id="@+id/enter_passwordsecondary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/enter_passwordprimary"
        android:layout_marginTop="20dp"
        android:backgroundTint="@color/white"
        android:hint="Password"
        android:inputType="numberPassword"
        android:textColorHint="@color/teal_200"
        android:textScaleX="1.2"
        android:textStyle="bold|italic"
        android:textColor="@color/teal_200"
        />

    <Button
        android:id="@+id/button_register"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_below="@+id/enter_passwordsecondary"
        android:layout_centerHorizontal="true"
        android:layout_marginHorizontal="50dp"
        android:background="@drawable/button_clearish"
        android:text="REGISTER"
        android:textAlignment="center"
        android:textSize="30dp" />

    <TextView
        android:id="@+id/text_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/button_register"
        android:layout_marginTop="16dp"
        android:text="already have an account? login here:"
        android:textColor="@color/white" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/button_register"
        android:layout_toRightOf="@+id/text_login"
        android:background="@color/clear"
        android:text="LOGIN"
        android:textColor="@color/white"
        android:id="@+id/button_login"/>


</RelativeLayout>